@using Cv.Mvc.Project.Models
@model List<TblSkılls>

<div class="container-fluid py-5" id="skill">
    <div class="container">
        <div class="position-relative d-flex align-items-center justify-content-center">
            <h1 class="display-1 text-uppercase text-white" style="-webkit-text-stroke: 1px #dee2e6;">Yetenekler</h1>
            <h1 class="position-absolute text-uppercase text-primary">Yeteneklerim</h1>
        </div>
        <div class="row align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-md-3">

                    <div class="skill mb-4">
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-bold">@item.Yetenek</h6>
                            <h6 class="font-weight-bold"></h6>
                        </div>
                        <div class="progress">
                            <div class="@item.Görsel" role="progressbar" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    


                </div>
            }
            </div>
    </div>
</div>
